@model Product
@{
    ViewData["Title"] = "ProductDetails";
    ViewBag.CurrentImg = Model.ProductImg1;
}

<div class="container" id="product-section">
    <div class="row">
        <div class="col-1">
            <img src="@Model.ProductImg1"
                 alt="@Model.ProductName"
                 class="img-fluid"
                 onclick="document.getElementById('Img').src = '@Model.ProductImg1';"/>
            <img src="@Model.ProductImg2"
                 alt="@Model.ProductName"
                 class="img-fluid" onclick="document.getElementById('Img').src = '@Model.ProductImg2';" />
            <img src="@Model.ProductImg3"
                 alt="@Model.ProductName"
                 class="img-fluid" onclick="document.getElementById('Img').src = '@Model.ProductImg3';" />
            <img src="@Model.ProductImg4"
                 alt="@Model.ProductName"
                 class="img-fluid" onclick="document.getElementById('Img').src = '@Model.ProductImg4';" />
        </div>
        <div class="col-md-5">
            <img src="@Model.ProductImg1"
                 alt="@Model.ProductName"
                 id="Img"
                 class="img-fluid" />
        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.ProductName</h1>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <p class="description">
                            @Model.ProductDescription
                        </p>
                        <div class="col-md-12">
                            <h2 class="product-price">₹@Model.ProductPrice</h2>
                        </div>
                        <div class="col-md-4">
                            @if (!ViewBag.InCart)
                            {
                                <button class="btn btn-lg btn-success btn-full-width" onclick="location.href = '@Url.Action("AddToCart", "Cart", new { id = Model.ProductId })'">
                                    Add to Cart
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-lg btn-danger btn-full-width" onclick="location.href = '@Url.Action("DeleteFromCart", "Cart", new { id = Model.ProductId })'">
                                    Remove from Cart
                                </button>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>