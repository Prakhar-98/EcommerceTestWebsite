    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
        <h5 class="my-0 mr-md-auto font-weight-normal">
            <span><a class="p-2 text-dark" href="/">SHOPAHOLICS</a></span>
        </h5>
        <nav class="my-2 my-md-0 mr-md-3">



            @if (Username != null)
            {
                @if (Context.User.IsInRole("User"))
                {
                    <a class="p-2 text-dark" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                    <a class="p-2 text-dark" asp-area="" asp-controller="Order" asp-action="Index">Your Orders</a>
                }
                else
                {
                    <a class="p-2 text-dark" asp-area="" asp-controller="Admin" asp-action="AddItem">Add Item</a>
                }
                <a class="p-2 text-dark" href="/cart">@Username</a>
                <a class="p-2 text-dark" asp-area="" asp-controller="User" asp-action="SignOut">Sign Out</a>
            }
            else
            {
                <a class="p-2 text-dark" asp-area="" asp-controller="User" asp-action="Login">LogIn</a>
                <a class="p-2 text-dark" asp-area="" asp-controller="User" asp-action="SignUp">SignUp</a>
            }
        </nav>

    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - TestProjectMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
