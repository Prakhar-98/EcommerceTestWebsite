@model List<OrderDetails>
@{
    ViewData["Title"] = "Index";
}

<table class="table table-bordered">
    <tr>
        <th>Product</th>
        <th>Product Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var OrderDetail in Model)
    {
        <tr>
        <td><img src="@OrderDetail.Product.ProductImg1" style="width:100px;height:100px"></td>
        <td>@OrderDetail.Product.ProductName</td>
        <td>₹@OrderDetail.Price</td>
        <td>@OrderDetail.Quantity</td>
        <td>₹@(OrderDetail.Price*OrderDetail.Quantity)</td>
    </tr>
    }
</table>
Order Address:@Model[0].Order.OrderAddress
<br>
<br>
Order Total:@Model[0].Order.OrderTotal


