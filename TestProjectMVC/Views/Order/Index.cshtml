@model List<Order>
@{
    ViewData["Title"] = "My Orders";
}
@if (Model.Count() != 0)
{<table class="table table-bordered table-striped">
    <tr>
        <th>Order Date</th>
        <th>Order Address</th>
        <th>Order Total</th>
        <th>View Details</th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
        <td>@Html.DisplayFor(x => order.OrderDate)</td>

        <td>@Html.DisplayFor(x => order.OrderAddress)</td>
        <td>
            @Html.DisplayFor(x => order.OrderTotal)
        </td>
        <td><button class="btn btn-success" onclick="location.href = '@Url.Action("Index", "OrderDetails", new { id = order.OrderId })'">View Details</button></td>
    </tr>
    }
</table>
}
else
{
    <h4>No Items to Show</h4>
}
