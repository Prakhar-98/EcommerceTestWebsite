<form class="center" asp-action="SignUp">
    <h2 class="text-center">Sign Up</h2>
    <div class="form-group">
        <input class="form-control" placeholder="Name" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="form-control" placeholder="Email" asp-for="UserEmail" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="form-control" placeholder="Phone No." asp-for="UserPhone" />
        <span asp-validation-for="UserPhone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input class="form-control" placeholder="Password" asp-for="UserPassword" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Sign Up" class="btn btn-primary btn-block" />
    </div>
    <div><a class="forgot" href="/forgotPassword">Forgot your email or password?</a></div>
    <div>
        <a class="forgot" asp-area="" asp-controller="User" asp-action="Login">Already have a account Log In.</a>
        <p class="text-danger">@ViewBag.message</p>
    </div>

</form>



